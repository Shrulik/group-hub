{
  "manifest_version": 3,
  "name": "Group Hub",
  "version": "0.1.0",
  "description": "Manage Chrome tab groups with sorting, filtering, and export/import capabilities.",
  "permissions": ["tabGroups", "tabs", "storage"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Open Group Hub",
    "default_popup": "group-hub/index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
